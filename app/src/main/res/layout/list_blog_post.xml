<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Type"
            android:textAllCaps="true"
            android:id="@+id/type"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:text="Date"
            android:id="@+id/date"
            android:layout_toRightOf="@+id/type"
            android:layout_alignBaseline="@+id/type"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title"
            android:textStyle="bold"
            android:id="@+id/title"
            android:layout_below="@+id/date"
            android:layout_alignLeft="@+id/type" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:maxWidth="100dp"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Special"
            android:textStyle="italic"
            android:id="@+id/special"
            android:layout_below="@+id/title" />

        <TextView
            android:background="@drawable/fadeout"
            android:layout_width="wrap_content"
            android:id="@+id/special_fadeout"
            android:lines="1"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/special"
            android:layout_alignLeft="@+id/special"
            android:layout_alignRight="@+id/special" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Desc"
            android:id="@+id/description"
            android:layout_below="@+id/special"
            android:layout_alignLeft="@+id/special" />

        <TextView
            android:background="@drawable/fadeout"
            android:id="@+id/description_fadeout"
            android:layout_width="wrap_content"
            android:lines="1"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/description"
            android:layout_alignRight="@+id/description"
            android:layout_alignLeft="@+id/special" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>